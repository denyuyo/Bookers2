<p id="notice"><%= notice %></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, accept: "image/*",class:"form-control-file, .form-control-range" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Introduction</label>
          <%= f.text_area :body, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= link_to 'Update User', user_path(@user), class:"btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>