<p id="notice"><%= notice %></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
       <h2>User info</h2>
       
       <%= image_tag current_user.get_user_image(100,100) %>
  
        <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= current_user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= current_user.introduction %></th>
           </tr>
           </tbody>
        </table>
        <div class="row">
         <% if @user == current_user %>
           <%= link_to edit_user_path(@user.id), class:"btn btn-block btn-outline-secondary" do %>
           <i class="fas fa-user-cog"></i>
           <% end %>
         <% else %>
            <%= link_to users_path(@user.id), class:"btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
         <h2 class="mt-3">New book</h2>
          <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
          <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label >Title</label>
              <%= f.text_field :title, class:"form-control" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body, class:"form-control" %>
            </div>
            <div class="form-group">
               <%= f.submit 'Create Book', class:"btn btn-success" %>
            </div>
          <% end %>
        </div>
        <div class='col-md-8 offset-md-1'>
    		    <h2>Books</h2>
              <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
                <tbody>
                  <tr>
                    <% @books.each do |book| %>
                    <td> <%= image_tag current_user.get_user_image(100,100) %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                  </tr>
                </tbody>
           </table>
           <% end %>
        </div>
  </div>
</div>