<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
         <h2>User info</h2>
         <%= image_tag current_user.get_user_image(100,100) %>

       <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= current_user.name %></th>
           </tr>
           <tr>
             <th>Introduction</th>
             <th><%= current_user.introduction %></th>
           </tr>
         </tbody>
       </table>
       <div class="row">
      <% if @user == current_user %>
         <%= link_to edit_user_path(@user.id), class:"btn btn-block btn-outline-secondary" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
      <% else %>
         <%= link_to users_path(@user.id), class:"btn btn-block btn-outline-secondary" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
      <% end %>
      </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label >Title</label>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control"%>
        </div>
        <div class="form-group">
           <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
        <div class='col-md-8 offset-md-1'>
          <h2>Users</h2>
          <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= image_tag current_user.get_user_image(100,100) %></td>
                  <td><%= @user.name %></td>
                  <td><%= link_to 'Show', user_path(@user.id) %></td>
                </tr>
              </tbody>
          </table>
        </div>
  </div>
</div>