<p id="notice"><%= notice %></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	
  		
<%= form_with model: @book, url:edit_book_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title,　class:"fkorm-control"  %>
          <!--<input class="form-control book_title" type="text" value="ge" name="book[title]" id="book_title" />-->
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_field :body,　class:"form-control", rows:"3" %>
          <!--<input class="form-control book_body" name="book[body]" id="book_body">-->
        </div>
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        <% end %>
        <div class="form-group">
          <%= link_to 'Show', @book %> |
          <%= link_to 'Back', books_path %>
        </div>
    </div>
  </div>
</div>