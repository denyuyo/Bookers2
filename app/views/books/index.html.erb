<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
  <%= render 'users/userinfo', user: @books %>

      <% if @book.errors.any? %>
         <h3> <%= @book.errors.count %>
            error prohibited this obj from being saved:</h3>
          </%>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  
        <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
               <% @books.each do |book| %>
              <tbody>
                <tr>
                  <td><%= link_to (image_tag book.user.get_user_image(80,80)),book_path(book.user) %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              </tbody>
              <% end %>
          </table>
        </div>
    </div>
</div>