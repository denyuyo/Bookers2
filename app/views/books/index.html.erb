<p id="notice"><%= notice %></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

         <%= image_tag current_user.get_user_image(100,100) %>

       <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= current_user.name %></th>
           </tr>
           <tr>
             <th>Introduction</th>
             <th><%= current_user.introduction %></th>
           </tr>
         </tbody>
       </table>
      <% if @user == current_user %>
         <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
      <% else %>
         <%= link_to user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
      <% end %>
        <h2 class="mt-3">New book</h2>
        <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label >Title</label>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_field :body, class:"form-control", rows:"3" %>
        </div>
        <div class="form-group">
           <%= f.submit 'Create Book', class:"btn btn-sm btn-success" %>
        </div>
        <% end %>
      </div>
        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
          <table class='table'>
            <% @books.each do |book| %>
              <tbody>
                <tr>
                  <td> <%= image_tag current_user.get_user_image(100,100) %>
                   <a><%=link_to current_user.name %></a>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                  <td><%= link_to 'Edit', @book, class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to 'destroy',  @book, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
                </tr>
              </tbody>
          </table>
          <% end %>
        </div>
  </div>
</div>