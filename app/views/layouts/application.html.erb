<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" id:'homes#top'><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to root_path ,class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i>Home
                <% end %>
              </li>
              <li>
                <%= link_to root_path ,class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i>Users
                <% end %>
              </li>
              <li>
                <%= link_to root_path ,class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i>Log out
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
  
      <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <li>
            <%= link_to new_user_registration,class: "btn btn-success btn-sm btn-block sign_up" %>
              Sign up
            <% end %>
          </li>
        </div>
        <div class="row">
          <li>
            <%= link_to new_user_session, class: "btn btn-info btn-sm btn-block mb-3 sign_in" %>
              Log in
            <% end %>
          </li>
        </div>
  </header>
    <%= yield %>

  <footer>
    <div class='container mt-5'>
    	<div class='row'>
      	<div class='mx-auto'>
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
  </footer>
 </body>
</html>